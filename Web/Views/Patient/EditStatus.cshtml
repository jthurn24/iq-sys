@model DateTime?

@{
    ViewBag.Layout_ContentTitle = "Change Status Date";
}

@using (Html.BeginForm()) 
{

    <div class="clear"></div>
    <br />
    <div class="grid_16" id="buttons">
        @Html.SmartCancel("Cancel", new { @class = "left cancel" })
        @Html.SmartSubmit("Save", new { @class = "right save" })
        <span class="clear"></span>
    </div>
    
    if (ViewContext.HasErrors())
    {
    <section class="grid_16 box">
        <div class="inside form">
        @Html.ValidationSummary()
        </div>
    </section>
    }
   
    <section class="grid_16 box">
        <h3>Status Information</h3>
        <div class="inside form">
            
            <div class="grid_6">
            <p>
            <div class="field">
                <span class="label">
                    Status Change Date
                </span>
                <span class="controls">
                    @Html.TextBox("changeDate", Model.FormatAsMinimalDate(), new { type = "datepicker" })
                </span>
            </div>
            <div class="clear"></div>
            <br />
        </div>
    </section>
    <div class="clear"></div>

}

