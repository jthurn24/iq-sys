@model IQI.Intuition.Web.Models.EmployeeInfection.EmployeeInfectionForm

@{
    ViewBag.Layout_ContentTitle = "Employee Infection";
}
@using (Html.BeginForm())
{

    @Html.HiddenFor(model => model.Id)

    <br />
    <div class="grid_16" id="buttons">
        @Html.SmartCancel("Cancel", new { @class = "left cancel" })
        @Html.SmartSubmit("Save", new { @class = "right save" })
    <span class="clear"></span>
    </div> 
    
    if (ViewContext.HasErrors())
    {
    <section class="grid_16 box">
        <div class="inside form">
        @Html.ValidationSummary()
        </div>
    </section>
    }

    @Html.Partial("Form", Model);
}
<div class="clear"></div>

@section Scripts
{
    @Html.Script("/scripts/jquery.tmpl.min.js")
    @Html.Script("/scripts/knockout-1.2.1.min.js")
    @Html.Script("/scripts/knockout.mapping-1.2.4.min.js")
    @Html.Script("/scripts/knockout.helper.js")
    @Html.Script("/scripts/jquery.unobtrusive-knockout.min.js")
    @Html.Script("/scripts/employee-infection-form-model.js")
    @Html.Script("/scripts/employee-infection-form.js")

    <script type="text/javascript">
        EmployeeInfectionForm(@Html.Raw(Json.Encode(Model.ClientViewModel)));
    </script>
}