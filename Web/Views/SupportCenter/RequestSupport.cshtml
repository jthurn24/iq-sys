@model IQI.Intuition.Web.Models.SupportCenter.SystemTicketAddForm
@{
    ViewBag.Layout_ContentTitle = "Request Support";
}

@using (Html.BeginForm())
{

 <br />
    <div class="grid_16" id="buttons">
        @Html.SmartCancel("Cancel", new { @class = "left cancel" })
        @Html.SmartSubmit("Request", new { @class = "right save" })
    <span class="clear"></span>
    </div> 
    
    if (ViewContext.HasErrors())
    {
    <section class="grid_16 box">
        <div class="inside form">
        @Html.ValidationSummary()
        </div>
    </section>
    }

    <section class="grid_16 box">
        <h3>Request Support</h3>

            <div style="font-size:12px;padding-left:20px;">

                <p style="font-weight:bold;font-style:italic">If you are reporting a problem:</p>

                <p>Please describe the nature of the problem, when it occurred, what screen you were viewing, and any other relevant information that might help us.</p>

                <p style="font-weight:bold;font-style:italic">If you are requesting training or have a question on how a particular feature works:</p>

                <p>Please indicate which feature you need help on and what you would like to accomplish.</p>

                <p style="font-weight:bold;color:Red;">* Please include a contact phone # (or email) and let us know the best time to contact you.</p>
            
            </div>

            

        <div style="padding:5px;">
        <div align="center">
            @Html.TextAreaFor(model => model.Details, new { style = "width:900px;height:250px;" })
        </div>
        </div>
    </section>

}
<div class="clear"></div>




