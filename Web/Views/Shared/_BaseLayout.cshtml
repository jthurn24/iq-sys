<!doctype html>  
 
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6"> <![endif]--> 
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7"> <![endif]--> 
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8"> <![endif]--> 
<!--[if IE 9 ]>    <html lang="en" class="no-js ie9"> <![endif]--> 
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en" class="no-js"> <!--<![endif]--> 
<head> 
 
    <meta charset="utf-8"> 
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
    <meta name="description" content="@ViewBag.Layout_PageDescription"> 
    <meta name="keywords" content="@ViewBag.Layout_PageKeywords"> 
    <meta name="author" content="@ViewBag.Layout_PageAuthor"> 
    <meta name="robots" content="noindex, nofollow"> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">

    @Html.Css("/styles/smoothness/jquery-ui-1.8.14.custom.css")
    @Html.Css("/styles/ui.jqgrid.css")
    @Html.Css("/styles/style.css")
    @Html.Css("/styles/dev.css")
    @Html.Css("/styles/jquery.qtip.css")

    <title>@(ViewBag.Layout_PageTitle ?? ViewBag.Layout_ContentTitle ?? "IQI Intuition")</title>

    @Html.Script("/scripts/modernizr.js")
    @Html.Script("/scripts/jquery.min.js")
    @Html.Script("/scripts/jquery-ui-1.8.21.custom.min.js")
    @Html.Script("/scripts/grid.locale-en.js")
    @Html.Script("/scripts/jquery.jqGrid.min.js")
    @Html.Script("/scripts/jquery.maskedinput-1.3.min.js")
    @Html.Script("/scripts/jquery.qtip.min.js");
    @Html.Script("/scripts/smartprompt.js");

</head> 
<body>

    <header>

        @{ Html.RenderAction("AdministrationPanel", "Navigation", new { area = "Administration" }); }

        <div class="container_16">
            <div class="grid_3">
                <div style="padding-top:10px;">
                    <img src="/Content/Images/logo2.png" />
                </div>
            </div>

            @RenderSection("Nav", false)


        </div>
        <div class="clear"></div>
        </div>
    </header>

    @RenderSection("SubMenu", false)

    <section id="content">

        @if (ViewContext.HasPendingUserMessage())
        {
            <div class="container_16">
                <br />
                <section class="grid_16 box" style="background-color:#ffc;">
                    <div class="usermessage">
                        @ViewContext.GetPendingUserMessage()
                    </div>
                </section>
            </div>
        }

        <div id="main" class="container_16">
            @RenderBody()
        </div>
    </section>

    <footer>
        <div class="container_16">
            <div class="grid_16">
                <div style="padding-top:10px;">Copyright &copy; 2011 IQI Systems. All rights reserved.</div>
                <div style="padding-top:5px;">@ViewContext.EnvironmentDetails()</div>
            </div>
            <div class="clear"></div>
        </div>
    </footer>

    @Html.Script("/scripts/init.js?v=2")

    @RenderSection("Scripts", false)

    <!-- Matomo -->
    <script type="text/javascript">
        var _paq = _paq || [];
        /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
        _paq.push(['trackPageView']);
        _paq.push(['enableLinkTracking']);
        (function () {
            var u = "//analytics.iqisystems.com/";
            _paq.push(['setTrackerUrl', u + 'piwik.php']);
            _paq.push(['setSiteId', '1']);
            var d = document, g = d.createElement('script'), s = d.getElementsByTagName('script')[0];
            g.type = 'text/javascript'; g.async = true; g.defer = true; g.src = u + 'piwik.js'; s.parentNode.insertBefore(g, s);
        })();
    </script>
    <!-- End Matomo Code -->



    <div id="loading-dialog" style="display:none;">
        <div style="text-align:center;padding-top:15px;">
            <img src="/Content/Images/standard-loader.gif" />
        </div>
    </div>

    <div id="premium-dialog" style="display:none;">
        <div style="text-align:center;padding-top:15px;">
            <div>
                <div style="padding:10px;font-size:14px;">This feature is only available in the premium version of IQI Intuition.  <a href="mailto:sales@iqisystems.com">Contact sales</a> to learn more!</div>
                <br />
                <br />
                @Html.SmartButton("/", "Exit")
            </div>
        </div>
    </div>

    <div id="confirm-dialog" style="display:none;">
        <div id="confirm-dialog-content" style="text-align:center;padding-top:5px;font-weight:bold;">
        </div>
    </div>

    <div id="audit-dialog" style="display:none;">
        <div id="audit-dialog-content">
        </div>
    </div>


    @if (ViewContext.RequestContext.HttpContext.Items["PermiumOnly"] == "1")
    {
        <script type="text/javascript">
            $('#main').hide();
            $('#premium-dialog').dialog({
                height: 200,
                width: 500,
                modal: true,
                resizable: false
            });

            $(".ui-dialog-titlebar").hide();
        </script>
    }

</body>
</html>

