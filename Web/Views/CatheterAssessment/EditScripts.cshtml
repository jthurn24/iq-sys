<script type="text/javascript">

    var CONTINUE_ACTION = '@Convert.ToInt32(IQI.Intuition.Domain.Enumerations.CatheterAction.Continue)';
    var REMOVE_ACTION = '@Convert.ToInt32(IQI.Intuition.Domain.Enumerations.CatheterAction.Attempt)';

    CatheterAssessmentForm(@Html.Raw(Json.Encode(Model.ClientViewModel)));

    $(function () {
        UpdateActionFields();
    });
    
   $('#Action').change(function() {
       UpdateActionFields();
    });

   function UpdateActionFields() {
       if ($('#Action').val() == REMOVE_ACTION) {
           $('#RemoveFields').show();
           $('#ContinueFields').hide();
       }
       else {
           $('#RemoveFields').hide();
           $('#ContinueFields').show();
       }
   }

</script>