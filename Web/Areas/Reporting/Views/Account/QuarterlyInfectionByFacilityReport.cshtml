@model IQI.Intuition.Web.Models.Reporting.Infection.Account.QuarterlyInfectionByFacilityView

@{
    ViewBag.QuickListAction = "AccountReportQuickList";
    ViewBag.QuickListItem = "Quarterly Infections By Facility";
    ViewBag.IsExportable = true;
    ViewBag.ExportLandscape = true;
}

<section class="grid_16 box leading"> 
        <h3>Quarterly Infection Control Report</h3>
        <div class="inside">
        @using (Html.BeginForm(null,null,FormMethod.Get))
        {
            <div style="padding:10px;">
            <span>Quarter:</span> @Html.DropDownListFor(m => m.Quarter, Model.QuarterOptions) 
            &nbsp;
            <span>Metric:</span> @Html.DropDownListFor(m => m.Metric, Model.MetricOptions) 
            &nbsp;                                           
            @Html.SmartSubmit("Refresh")
            </div>
            <div style="font-size:9px;font-weight:bold;padding-bottom:5px;padding-top:5px;">Include Facilities:</div>
            <div style="font-size:9px;height:50px;overflow:auto;">
                @Html.HorizontalCheckBoxFor(m => m.SelectedFacilities, Model.FacilityOptions)
            </div>
            <div style="clear:both;"></div>
        }
        </div> 
        <div style="font-weight:bold;font-size:12px;text-align:center;padding-top:5px;padding-bottom:5px;">Data Last Updated: @ViewContext.LastSynchronized() </div>
</section>

<section class="grid_8 box leading"> 
        <h3>@Model.Month1.Name</h3>
        <div class="inside">
        @Html.DisplayFor(m => m.Month1Chart)
        </div> 
</section>

<section class="grid_8 box leading"> 
        <h3>@Model.Month2.Name</h3>
        <div class="inside">
        @Html.DisplayFor(m => m.Month2Chart)
        </div> 
</section>

<section class="grid_8 box leading"> 
        <h3>@Model.Month3.Name</h3>
        <div class="inside">
        @Html.DisplayFor(m => m.Month3Chart)
        </div> 
</section>

<section class="grid_8 box leading"> 
        <h3>Totals</h3>
        <div class="inside">
        @Html.DisplayFor(m => m.TotalChart)
        </div> 
</section>

<div class="clear"></div>