
@model IQI.Intuition.Web.Models.Administration.SystemContact.SystemContactEditForm
@{
    ViewBag.Layout_ContentTitle = "Edit Contact";
}

@using (Html.BeginForm())
{

    @Html.HiddenFor(model => model.Id)

    <br />
    <div class="grid_16" id="buttons">
        @Html.SmartCancel("Cancel", new { @class = "left cancel" })
        @Html.SmartSubmit("Save", new { @class = "right save" })
    <span class="clear"></span>
    </div> 
    
    if (ViewContext.HasErrors())
    {
    <section class="grid_16 box">
        <div class="inside form">
        @Html.ValidationSummary()
        </div>
    </section>
    }


	<section class="grid_16 box">
		<h3>Add Contact</h3>
		<div class="inside form">
		<p>
            <div class="field">@Html.EditorFor(model => model.FirstName)</div>
            <div class="clear"></div>
            <div class="field">@Html.EditorFor(model => model.LastName)</div>
            <div class="clear"></div>
            <div class="field">@Html.EditorFor(model => model.Title)</div>
            <div class="clear"></div>
            <div class="field">@Html.EditorFor(model => model.Cell)</div>
            <div class="clear"></div>
            <div class="field">@Html.EditorFor(model => model.Direct)</div>
            <div class="clear"></div>
            <div class="field">@Html.EditorFor(model => model.Email)</div>
			<br />
		</p>
	</section>
	<div class="clear"></div>

    <section class="grid_16 box">
        <h3>Notes</h3>
        <div style="padding:5px;">
        <div align="center">
            @Html.TextAreaFor(model => model.Notes, new { style = "width:900px;height:250px;" })
        </div>
        </div>
    </section>

}
<div class="clear"></div>


