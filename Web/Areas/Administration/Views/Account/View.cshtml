@model IQI.Intuition.Web.Models.Administration.Account.AccountViewForm
@{
    ViewBag.Layout_ContentTitle = "View Account";
}

@using (Html.BeginForm())
{

    @Html.HiddenFor(model => model.Id)

    <br />
    <div class="grid_16" id="buttons">
        @Html.SmartCancel("Return To Account List", new { @class = "left cancel" })
        @Html.SmartSubmit("Edit", new { @class = "right save" })
    <span class="clear"></span>
    </div> 
    
    if (ViewContext.HasErrors())
    {
    <section class="grid_16 box">
        <div class="inside form">
        @Html.ValidationSummary()
        </div>
    </section>
    }


	<section class="grid_16 box">
		<h3>View Account</h3>
		<div class="inside form">

            <div class="grid_8">
            <div class="field">@Html.DisplayFor(model => model.Guid)</div>
            <div class="clear"></div>
            <div class="field">@Html.DisplayFor(model => model.Name)</div>
            <div class="clear"></div>
            </div>
            <br>
        </div>

        <br />
        <div class="clear"></div>

	</section>
	<div class="clear"></div>

}


<div class="clear"></div>
<section class="grid_16 box">
    <h3>Additional Information</h3>
    <ul class="boxtabs">
        <li><a href="#">Facilities</a></li>
        <li><a href="#">Open Tickets</a></li>
        <li><a href="#">Closed Tickets</a></li>
        <li><a href="#">Files</a></li>
        <li><a href="#">Contacts</a></li>
    </ul>
    <div class="inside panes">
            <div>
                <br />
                @{ Html.RenderAction("AccountFacilityList", new { controller = "Facility", area = "Administration", accountId = Model.Id }); }
                <div class="tablenav">
                    <div class="newbtn">
                        <button class="link" data-url="@Url.Action("Add", "Facility", new { accountId = Model.Id })">Add Facility</button>
                    </div>
                    <div class="clear"></div>
                </div>
            </div> 
            <div>
                <br />
                @{ Html.RenderAction("ListForAccount", new { controller = "SystemTicket", area = "Administration", accountId = Model.Id, closed = false }); }
                <div class="tablenav">
                    <div class="newbtn">
                        <button class="link" data-url="@Url.Action("Add", "SystemTicket", new { accountId = Model.Id })">Add Ticket</button>
                    </div>
                    <div class="clear"></div>
                </div>
            </div> 
            <div>
                <br />
                @{ Html.RenderAction("ListForAccount", new { controller = "SystemTicket", area = "Administration", accountId = Model.Id, closed = true }); }
                <div class="tablenav">
                    &nbsp;
                    <div class="clear"></div>
                </div>
            </div> 
            <div>
                <br />
                @{ Html.RenderAction("ListFor", new { controller = "SystemSecureFile", area = "Administration", accountId = Model.Id }); }
                <div class="tablenav">
                    <div class="newbtn">
                        <button class="link" data-url="@Url.Action("Add", "SystemSecureFile", new { accountId = Model.Id })">Add File</button>
                    </div>
                    <div class="clear"></div>
                </div>
           </div> 
           <div>
                <br />
                @{ Html.RenderAction("ListFor", new { controller = "SystemContact", area = "Administration", accountId = Model.Id }); }
                <div class="tablenav">
                    <div class="newbtn">
                        <button class="link" data-url="@Url.Action("Add", "SystemContact", new { accountId = Model.Id })">Add Contact</button>
                    </div>
                    <div class="clear"></div>
                </div>
           </div> 
     </div>
</section>


<div style="clear:both;"></div>


<script type="text/javascript">

    function facilityRowSelect(id) {
        smoothLoad('@Url.Action("View", "Facility")/?id=' + id);
    }

    function systemticketRowSelect(id) {
        smoothLoad('@Url.Action("View","SystemTicket")/?id=' + id);
    }

    function systemcontactRowSelect(id) {
        smoothLoad('@Url.Action("View","SystemContact")/?id=' + id);
    }
    

</script>