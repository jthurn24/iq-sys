@model IQI.Intuition.Web.Models.Administration.Facility.FacilityEditForm
@{
    ViewBag.Layout_ContentTitle = "Edit Facility";
}

@using (Html.BeginForm())
{

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.AccountId)

    <br />
    <div class="grid_16" id="buttons">
        @Html.SmartCancel("Cancel", new { @class = "left cancel" })
        @Html.SmartSubmit("Save", new { @class = "right save" })
    <span class="clear"></span>
    </div> 
    
    if (ViewContext.HasErrors())
    {
    <section class="grid_16 box">
        <div class="inside form">
        @Html.ValidationSummary()
        </div>
    </section>
    }


	<section class="grid_16 box">
		<h3>Add Facility</h3>
		<div class="inside form">

        <div class="grid_6">
		<p>
        <div class="field">@Html.EditorFor(model => model.Name)</div>
        <div class="clear"></div>
        <div class="field">@Html.EditorFor(model => model.SubDomain)</div>
        <div class="clear"></div>
        <div class="field">@Html.EditorFor(model => model.State)</div>
        <div class="clear"></div>
        <div class="field">@Html.EditorFor(model => model.FacilityType)</div>
        <div class="clear"></div>
        <div class="field">@Html.EditorFor(model => model.MaxBeds)</div>
        <div class="clear"></div>
	    <br />
		</p>
        </div>

        </div>
	</section>
	<div class="clear"></div>

}
<div class="clear"></div>


