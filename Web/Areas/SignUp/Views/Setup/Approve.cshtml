
@model IQI.Intuition.Web.Models.SignUp.ApproveForm
@{
    Layout = null;
}

<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
    <div class="container">
        @using (Html.BeginForm())
        {
            <img src="/Content/Images/logo2.png" />

            if (ViewContext.HasErrors())
            {
                <div class="row">
                    <div class="col s12" style="color:red;">
                        @Html.ValidationSummary()
                    </div>
                </div>
            }

            <div class="row">
                <div class="col s12">
                    <h3>Complete Registration</h3>
                    <br />
                    <p><div class="field">@Html.EditorFor(model => model.FacilityName)</div></p>
                    <p><div class="field">@Html.EditorFor(model => model.State)</div><br /></p>
                    <p><div class="field">@Html.EditorFor(model => model.Password)</div><br /></p>
                    <p><div class="field">@Html.EditorFor(model => model.ConfirmPassword)</div><br /></p>
                </div>

                <div class="field">
                    <h5>User Agreement</h5>

                    <div class="z-depth-1">
                        <div style="padding:20px;">
                            <div style="height:200px;overflow-x:auto;">
                                @Html.Partial("TOS")
                            </div>
                        </div>
                    </div>

                    <br />

                    <button type="submit" class="waves-effect waves-light btn light-blue darken-4">
                        I Agree. Create My Account.
                    </button>
                </div><br />
            </div>

        }
    </div>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-33943272-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-33943272-1');
    </script>
</body>
</html>

